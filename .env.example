# Interactive Spectral Clustering Platform Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=clustering_db
POSTGRES_USER=cluster_user
POSTGRES_PASSWORD=secure_password_change_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://cluster_user:secure_password_change_in_production@localhost:5432/clustering_db

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_BACKEND=redis://redis:6379/1
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Security Features
SECURITY_HEADERS_ENABLED=true
REQUEST_SIZE_LIMIT=52428800
FILE_UPLOAD_SIZE_LIMIT=52428800

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# FILE HANDLING
# =============================================================================
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.tsv
ALLOWED_MIME_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# =============================================================================
# GPU CONFIGURATION
# =============================================================================
GPU_ENABLED=false
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# DATABASE CONNECTION POOL
# =============================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_ENVIRONMENT=development

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
SECURITY_MONITORING_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================
# Available profiles: frontend, cache, production, monitoring
# Example: docker-compose --profile frontend --profile cache up -d

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, override the following:
# ENVIRONMENT=production
# DEBUG=false
# JWT_SECRET=<generate-strong-256-bit-key>
# POSTGRES_PASSWORD=<generate-strong-password>
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_WS_URL=wss://api.yourdomain.com/ws
# GPU_ENABLED=true (if GPU available)
# PROMETHEUS_ENABLED=true
# SECURITY_MONITORING_ENABLED=true
